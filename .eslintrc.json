{
    "root": true,
    "plugins": ["jest"],
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "overrides": [{
        "files": ["**/*.spec.js"],
        "plugins": ["jest"],
        "extends": ["plugin:jest/recommended"]
    }]
}
